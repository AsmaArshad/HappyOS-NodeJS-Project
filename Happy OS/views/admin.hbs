<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/admin-style.css">

    <title>Admin</title>
</head>

<body onload="add_policy();">

    <div class="admin">
        <div class="container-fluid">
            <div class="row justify-content-between mt-4">
                <div class="row">
                    <div class="col-12">
                        {{>header}}
                    </div>
                </div>
            </div>
        </div>
        {{#if success_msg}}
        <div class="alert alert-danger" role="alert">
            {{success_msg}}
        </div>
        {{/if}}


        {{#if error_msg}}
        <div class="alert alert-danger" role="alert">
            {{error_msg}}
        </div>
        {{/if}}

        <div class="row text-center">
            <div class="col-12">
                <h2>Admin Policy Upload</h2>
            </div>
        </div>

        <div class="row justify-content-center mt-4">
            <div class="col-10">
                <div class="row mb-4">
                    <div class="col-5">
                        <input class="admin-input w-100" type="text" placeholder="Policy Number #" id="policy"
                            name="Policy_No">
                    </div>
                </div>
                <div class="row">
                    <div class="col-5">
                        <input class="admin-input w-100" type="text" placeholder="Progress Note" id="progress_note">
                    </div>
                    <div class="col-6">
                        <div class="mb-3">
                            <input class="file-input" id='files' name="files" type="file">
                            <div class="line"></div>
                        </div>
                    </div>
                </div>

            </div>
        </div>


        <div class="row mt-2">
            <div class="col-2">
                <select class="menu" id="program">
                    <option value="">Select Program</option>
                    <option value="HR Employee Mgmt">HR Employee Mgmt</option>
                    <option value="Training Career Mgmt">Training Career Mgmt</option>
                    <option value="Corporate Standards">Corporate Standards</option>
                    <option value="Claint Rights">Claint Rights</option>
                    <option value="Claint Management">Claint Management</option>
                    <option value="Service Options">Service Options</option>
                    <option value="Miscellaneus">Miscellaneus</option>
                </select>
            </div>
            <div class="col-4">
                <select class="menu-2" id="category">
                    <option value="">Select Policy Catagory</option>
                    <option value="ACT">ACT</option>
                    <option value="ARMHS">ARMHS</option>
                    <option value="MCT">MCT</option>
                    <option value="CTSS">CTSS</option>
                    <option value="ITFC">ITFC</option>
                    <option value="IRMHS">IRMHS</option>
                    <option value="IRTS">IRTS</option>
                    <option value="RCH<">RCH</option>
                    <option value="MHC">MHC</option>
                    <option value="ADT">ADT</option>
                    <option value="PHP">PHP</option>
                </select>
            </div>
        </div>

        <div class="row justify-content-center">

            <div class="col-5 half-div">

                <div class="row">
                    <div class="col-12">
                        <div class="row justify-content-between">
                            <div class="col-2">
                                <h3>Statutes</h3>
                            </div>

                            <div class="col-2">
                                <button class="my-btn" id="Add-btn" onclick="add_policy()">ADD</button>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="row mt-1">
                                    <div class="col-10">
                                    </div>
                                </div>
                            </div>

                            <div class="col-12" id="custom-div">
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-5 half-div-2">
                <div class="row">
                    <div class="col-12">
                        <div class="row justify-content-between">
                            <div class="col-2">
                                <h3>Subdivision</h3>
                            </div>
                            <div class="col-2">
                                <button class="my-btn" id="division-btn" onclick="addDivision(focus_id)">ADD</button>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="row mt-1">
                                    <div class="col-10">
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 subdivision2" id="custom-division">
                                <div id="d-remove"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-5">
                <div class="col-12 text-center">
                    <button class="policy-btn" onclick="savePolicyData()">SAVE POLICY</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showDrop() {
            var x = document.getElementById("wel-drop");
            if (x.style.display === "none") {
                x.style.display = "block";
            } else {
                x.style.display = "none";
            }
        }
    </script>
    <script src="./js/admin.js"></script>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>